{
    "version": "0.2",
    "language": "en-US,de-DE",
    "languageSettings": [
        {
            "languageId": "markdown",
            "ignoreRegExpList": [
                // pandoc references
                "\\[(@|\\^).+\\]"
            ]
        },
        {
            "languageId": "bibtex",
            "ignoreRegExpList": [
                // reference definition
                "@.+?\\{.+?,",
                "^.+?="
            ]
        }
    ],
    "ignorePaths": [
        "output-tex"
    ],
    "words": [
        "chaosduck",
        "DHBW",
        "knative",
        "kube",
        "kubelet",
        "kubernetes",
        "pandoc",
        "rebalancing",
        "schedulable",
        "sharded",
        "sharder",
        "webhosting"
    ]
}
